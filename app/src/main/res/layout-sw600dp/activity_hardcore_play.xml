<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hardcore_play"
    android:paddingLeft="100dp"
    android:paddingStart="100dp"
    android:paddingRight="100dp"
    android:paddingEnd="100dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.crowmoore.reflextester.HardcorePlay"
    android:background="@android:color/black">

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_hc_button"
        android:id="@+id/button_red"
        android:background="@null"
        android:layout_alignTop="@+id/button_blue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_hc_button"
        android:id="@+id/button_yellow"
        android:background="@null"
        android:layout_alignTop="@+id/button_green"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_hc_button"
        android:layout_marginTop="250dp"
        android:id="@+id/button_blue"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_countdown"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="casual"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ic_hc_button"
        android:layout_marginTop="80dp"
        android:id="@+id/button_green"
        android:background="@null"
        android:layout_below="@+id/button_blue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewHC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_hardcore">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
