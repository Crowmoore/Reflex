<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_dialog"
        android:text="Game Over"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="40sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_result"
        android:text=""
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:fontFamily="casual"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="90dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore_result"
        android:text=""
        android:fontFamily="casual"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/score_result"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tap_count"
        android:text=""
        android:fontFamily="casual"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/highscore_result"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reaction_time"
        android:text=""
        android:fontFamily="casual"
        android:layout_marginLeft="5dp"
        android:textSize="22sp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tap_count"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/centerShim"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Back to menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:onClick="onBackButtonClick"
        android:background="@android:color/holo_red_light"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:id="@+id/back_button"
        android:layout_toRightOf="@id/centerShim"
        android:layout_toEndOf="@id/centerShim"/>

    <Button
        android:text="Try again"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:onClick="onResetButtonClicked"
        android:id="@+id/reset_button"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:background="@android:color/holo_green_light"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/centerShim"
        android:layout_toStartOf="@id/centerShim"/>

</RelativeLayout>