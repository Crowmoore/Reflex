<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sound_alert"
        android:text="No sound"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_sound_info"
        android:text="Hardcore mode doesn't have any visual input about what button to press next. You must rely on your MEMORY and on the SOUNDS the buttons make. Only a madman would try this without sounds. Are you a madman?"
        android:fontFamily="casual"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:text="No"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/no_sound_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onNoMadmanClicked"
        android:fontFamily="casual"
        android:id="@+id/dialog_madman_no" />

    <Button
        android:text="Yes"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/no_sound_info"
        android:onClick="onYesMadmanClicked"
        android:id="@+id/dialog_madman_yes"
        android:fontFamily="casual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>