<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score_dialog"
        android:text="Sign in?"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_info"
        android:text="In order to receive achievements and compete on the leaderboards you need to be signed in to Google Play Games Service. Would you like to sign in now?"
        android:fontFamily="casual"
        android:textSize="16sp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <Button
        android:text="Not now"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/sign_in_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onNotNowClicked"
        android:fontFamily="casual"
        android:id="@+id/dialog_not_now_button" />

    <Button
        android:text="Sign in"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/sign_in_info"
        android:onClick="onSignInClicked"
        android:id="@+id/dialog_sign_in_button"
        android:fontFamily="casual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>