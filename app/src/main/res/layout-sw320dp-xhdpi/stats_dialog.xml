<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:srcCompat="@drawable/ic_stats_bg"
        android:id="@+id/background"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore_hardcore"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/games_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/games_hardcore"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="hardcore games played: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reaction_regular"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reaction_hardcore"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taps_total"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text=""/>

    <android.support.v7.widget.AppCompatImageButton
        android:layout_width="125dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:id="@+id/close_button"
        android:layout_below="@id/taps_total"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/ic_button_close" />

</RelativeLayout>